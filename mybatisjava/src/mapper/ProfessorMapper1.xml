<?xml version="1.0" encoding="UTF-8"?>
<!-- /src/mapper/ProfessorMapper1.xml -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="professor">
	<select id="count" resultType="int">
		select count(*) from professor
	</select>
	<select id="list" resultType="Professor">
		select * from professor
	</select>
	<select id="deptno" resultType="Professor" parameterType="int">
		select * from professor where deptno=#{value}
	</select>
	<select id="selectnameposition" resultType="Professor" parameterType="map">
		select * from professor where name like #{name}
							   and position = #{position}
	</select>
</mapper>